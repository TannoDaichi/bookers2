    <p id="notice"></p>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h2>User info</h2>
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
         <% end %>
                <%= form_with model: @user, local:true do |f| %>
                    <div class="form-group">
                        <label for="inputName">Name</label>
                        <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name"%></p>
                    </div>
                    <div class="form-group">
                        <label for="inputImage">Image</label>
                        <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> </p>
                    </div>
                    <div class="form-group">
                        <label for="user_introduction">Introduction</label>
                        <p><%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "form-control introduction" %></p>
                    </div>
                    <div class="form-group">
                        <%= f.submit "Update User", class: "btn btn-secondary" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>